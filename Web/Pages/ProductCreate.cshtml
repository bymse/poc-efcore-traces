@page
@model ProductCreateModel
@{
    ViewData["Title"] = "Create New Product";
}

<div class="row mb-4">
    <div class="col">
        <h1>Create New Product</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h3>Product Information</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="ProductInput.Name" class="form-label">Name</label>
                        <input asp-for="ProductInput.Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProductInput.Category" class="form-label">Category</label>
                        <input asp-for="ProductInput.Category" class="form-control" required />
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Create Product</button>
                    <a asp-page="./Products" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>