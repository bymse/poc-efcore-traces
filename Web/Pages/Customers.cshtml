@page
@model CustomersModel
@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>
                    <a asp-page="./CustomerDetails" asp-route-customerId="@customer.Id" class="btn btn-primary btn-sm">View
                        Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Customers pagination">
    <ul class="pagination">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-page="./Customers" asp-route-currentPage="@(Model.CurrentPage - 1)">Previous</a>
        </li>

        @{
            const int displayPages = 3;
            var startPage = Math.Max(1, Model.CurrentPage - displayPages);
            var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + displayPages);

            if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./Customers" asp-route-currentPage="1">1</a>
                </li>
                if (startPage > 2)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
            }

            for (var i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="./Customers" asp-route-currentPage="@i">@i</a>
                </li>
            }

            if (endPage < Model.TotalPages)
            {
                if (endPage < Model.TotalPages - 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link" asp-page="./Customers" asp-route-currentPage="@Model.TotalPages">@Model.TotalPages</a>
                </li>
            }
        }

        <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-page="./Customers" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
        </li>
    </ul>
</nav>
